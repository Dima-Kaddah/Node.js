<h1 class="header" style="text-align:center">
  {{city}}
  {{icon}}
  {{headLine}}
</h1>
<h2 class="alert-danger" style="text-align:center">
  {{weatherDescription}}
  {{errMessage}}
</h2>

<div class="container mt-5">
  <form action="/weather" method="POST">
    <div class="form-group">
      <input type="text" name="cityName" placeholder="Enter City" class="form-control">
    </div>
    <div class="form-group">
      <input type="submit" value="Add City" class="btn btn-primary btn-block">
    </div>

  </form>

  <table class="table table-hover" style="text-align:center">
    <thead>
      <tr>
        <th scope="col">Temperature</th>
        <th scope="col">Max Temperature</th>
        <th scope="col">Min Temperature</th>
      </tr>
    </thead>
    <tbody>
      <tr class="table-active">
        <th scope="row">{{Temperature}}</th>
        <td>{{maxTemperature}}</td>
        <td>{{minTemperature}}</td>
      </tr>
</div>